{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2020",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "lib": ["ES2020"],
    "declaration": true,
    "outDir": "lib",
    "rootDir": "src",
    "strict": true
  },
  "exclude": ["lib", "node_modules"],
  "include": ["src"]
}
